@model Form_Login_ViewModel

@*<h2>@ViewBag.Title</h2>*@
<hr />

@if(ViewData.ModelState[""] != null && ViewData.ModelState[""].Errors.Count > 0)
{
    <div class="alert alert-danger">
        <b>NOTE:</b>&nbsp;@Html.ValidationSummary(true)
    </div>
}

@using (Html.BeginForm("Login", "Account"))
{
    @Html.HiddenFor(l => l.ReturnUrl)

    <div class="form-group">
        @Html.LabelFor(l => l.UserName, "Username")
        @Html.TextBoxFor(l => l.UserName,
            new { @class = "form-control" })
        @Html.ValidationMessageFor(l => l.UserName)
    </div>
    <div class="form-group">
        @Html.LabelFor(l => l.Password, "Password")
        @Html.PasswordFor(l => l.Password,
            new { @class = "form-control" })
        @Html.ValidationMessageFor(l => l.Password)
    </div>

    <center>
        <button class="btn btn-primary" type="submit">Sign-In</button>
    </center>
}
